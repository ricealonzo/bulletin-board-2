<div>
  <div>
    <h1>
      All boards
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new board
    </h2>
  <% if current_user == nil %>
    <p>You Must <a href="/users/sign_in"> Sign In</a>  to Add Board </p>
    
  <% else %> 
    <form action="/insert_board" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Add board
      </button>
    </form>
  <% end %>
  </div>
</div>

<hr>

<ul>
  <% @list_of_boards.each do |a_board| %>
    <li>
      <a href="/boards/<%= a_board.id %>">
        <%= a_board.name %>
      </a>
     
       <div> <%  matching_user = User.where({:id=> a_board.user_id}) %></div>
       <div> <% the_user = matching_user.at(0) %></div>
       <div> <%= the_user.email %></div>
    </li>
  <% end %>
</ul>
